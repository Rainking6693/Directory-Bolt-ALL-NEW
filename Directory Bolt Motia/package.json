{
  "name": "directory-bolt-motia",
  "private": true,
  "scripts": {
    "python-setup": "python3 -m venv python_modules && python_modules/bin/pip install -r requirements.txt",
    "dev": "motia dev -p 4001",
    "dev:workbench": "__MOTIA_DEV_MODE__=1 motia dev -p 4001",
    "clean": "rm -rf .mermaid node_modules python_modules",
    "get-config": "motia get-config --output ./",
    "test:tsc-check": "tsc -p ./tests/tsconfig.test.json --noEmit",
    "test": "PATH=python_modules/bin:$PATH jest",
    "test:silent": "PATH=python_modules/bin:$PATH jest --silent",
    "lint": "biome check .",
    "lint:plugins": "pnpm run lint:plugins:ts && pnpm run lint:plugins:tsx",
    "lint:plugins:ts": "eslint --config ../eslint.config.js",
    "lint:plugins:tsx": "eslint --config ../eslint.config.tsx.js"
  },
  "dependencies": {
    "@faker-js/faker": "^9.2.0",
    "@motiadev/stream-client-react": "^0.13.1-beta.162",
    "@supabase/supabase-js": "^2.86.0",
    "deep-equal": "^2.2.3",
    "lucide-react": "^0.525.0",
    "motia": "^0.13.1-beta.162",
    "openai": "^4.78.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.4",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.0.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "react": "^19.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "openai": {
      "zod": "^4.1.13"
    }
  }
}
